<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>NewSearchController</servlet-name>
    <servlet-class>gamelive.controller.ign.NewSearchController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewSearchController</servlet-name>
    <url-pattern>/newsearch</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>TwitchSearchController</display-name>
    <servlet-name>TwitchSearchController</servlet-name>
    <servlet-class>gamelive.controller.twitch.TwitchSearchController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TwitchSearchController</servlet-name>
    <url-pattern>/TwitchSearchController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>TwitchStreamController</display-name>
    <servlet-name>TwitchStreamController</servlet-name>
    <servlet-class>gamelive.controller.twitch.TwitchStreamController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TwitchStreamController</servlet-name>
    <url-pattern>/TwitchStreamController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>TwitchFollowingController</display-name>
    <servlet-name>TwitchFollowingController</servlet-name>
    <servlet-class>gamelive.controller.twitch.TwitchFollowingController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TwitchFollowingController</servlet-name>
    <url-pattern>/followList</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>GiantbombController</display-name>
    <servlet-name>GiantbombController</servlet-name>
    <servlet-class>gamelive.controller.giantbomb.GiantbombController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GiantbombController</servlet-name>
    <url-pattern>/games</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>GiantBombSearchController</display-name>
    <servlet-name>GiantBombSearchController</servlet-name>
    <servlet-class>gamelive.controller.giantbomb.GiantBombSearchController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GiantBombSearchController</servlet-name>
    <url-pattern>/searchGame</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>YoutubeSearchController</display-name>
    <servlet-name>YoutubeSearchController</servlet-name>
    <servlet-class>gamelive.controller.youtube.YoutubeSearchController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>YoutubeSearchController</servlet-name>
    <url-pattern>/youtubeSearch</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>YoutubeAuthController</servlet-name>
    <servlet-class>gamelive.controller.oauth.GenericAuthController</servlet-class>
    <init-param>
      <param-name>provider</param-name>
      <param-value>Youtube</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>YoutubeAuthController</servlet-name>
    <url-pattern>/AuthController/Youtube</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>YoutubeOAuth2Callback</servlet-name>
    <servlet-class>gamelive.controller.oauth.OAuth2Callback</servlet-class>
    <init-param>
      <param-name>provider</param-name>
      <param-value>Youtube</param-value>
    </init-param>
    <init-param>
      <param-name>onSuccess</param-name>
      <param-value>redirect/youtubeSearch</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>YoutubeOAuth2Callback</servlet-name>
    <url-pattern>/oauth2callback/Youtube</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Resteasy</servlet-name>
    <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>gamelive.api.GameLiveApplication</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Resteasy</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>GiantBombGameController</display-name>
    <servlet-name>GiantBombGameController</servlet-name>
    <servlet-class>gamelive.controller.giantbomb.GiantBombGameController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GiantBombGameController</servlet-name>
    <url-pattern>/GiantBombGameController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>YoutubeVideoController</display-name>
    <servlet-name>YoutubeVideoController</servlet-name>
    <servlet-class>gamelive.controller.youtube.YoutubeVideoController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>YoutubeVideoController</servlet-name>
    <url-pattern>/videoController</url-pattern>
  </servlet-mapping>
</web-app>